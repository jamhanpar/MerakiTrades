<!DOCTYPE html>
<html>
  <head>
    <title>Robinhoot</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag%>
    
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Rubik&display=swap" rel="stylesheet">

    <%= favicon_link_tag asset_path('logo.png') %>

    <% if current_user %>
      <script>
        window.currentUser = {
            "id": <%=current_user.id%>,
            "email": "<%=current_user.email%>",
            "first_name": "<%=current_user.first_name%>",
            "last_name": "<%=current_user.last_name%>"
        };
      </script>
    <% end %>

    <script type="text/javascript">
        window.faqIcon = "<%= image_url("faq-icon.png")%>"
        window.newsDots = "<%= image_url("newsDots.png")%>"
        window.newsFiller = "<%= image_url("filler.png")%>"
        window.searchIcon = "<%= image_url("search-icon.png")%>"
        window.frontPageImage = "<%= image_url("Frontpage_image_1.png")%>"
        window.robinhootLogo = "<%= image_url("robinhoot_logo_thin_no_padding.png")%>"
        window.Logo = "<%= image_url("logo.png")%>"
        window.iexcloudAPIKey = "<%= Rails.application.credentials.iexcloud[:api_key] %>"
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>